@model AspStudio_Boilerplate.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log in";
    ViewData["AppClass"] = "app-full-height app-without-header app-full-width";
    ViewData["AppWithoutHeader"] = true;
    ViewData["AppWithoutSidebar"] = true;
    ViewData["AppWithoutContainer"] = true;
}

<!-- BEGIN login -->
<div class="login">
	<!-- BEGIN login-content -->
	<div class="login-content">
    <form id="account" method="post">
			<h1 class="text-center">Sign In</h1>
			<div class="text-muted text-center mb-4">
				For your protection, please verify your identity.
			</div>
      <div asp-validation-summary="All" class="text-danger"></div>
			<div class="mb-3">
				<label class="form-label" asp-for="Email"></label>
				<input asp-for="Email" class="form-control form-control-lg fs-15px" placeholder="Enter your email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input asp-for="Password" class="form-control form-control-lg fs-15px" value="" placeholder="Enter your password" />
        <span asp-validation-for="Password" class="text-danger"></span>
			</div>
	    <button type="submit" class="btn btn-primary btn-lg d-block w-100 fw-500 mb-3">Sign In</button>
			<div class="text-center text-muted">
				Don't have an account yet? <a href="@Url.ActionLink("Register")">Sign up</a>.
			</div>
		</form>
	</div>
	<!-- END login-content -->
</div>
<!-- END login -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
