@model AspStudio_Boilerplate.Models.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    ViewData["AppClass"] = "app-full-height app-without-header app-full-width";
    ViewData["AppWithoutHeader"] = true;
    ViewData["AppWithoutSidebar"] = true;
    ViewData["AppWithoutContainer"] = true;
}


<!-- BEGIN register -->
<div class="register">
    <!-- BEGIN register-content -->
    <div class="register-content">
        <form method="post">
            <h1 class="text-center">Sign Up</h1>
            <p class="text-muted text-center">One Admin ID is all you need to access all the Admin services.</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control form-control-lg fs-15px" placeholder="Enter your Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control form-control-lg fs-15px" value=""/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg fs-15px" value=""/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary btn-lg fs-15px fw-500 d-block w-100">Sign Up</button>
            </div>
            <div class="text-muted text-center">
                Already have an Admin ID? <a href="@Url.ActionLink("Login", "Identity")">Sign In</a>
            </div>
        </form>
    </div>
    <!-- END register-content -->
</div>
<!-- END register -->

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}