@model List<AspStudio_Boilerplate.Entities.ViewModels.ManageUsers.IndexViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Home</a>
    </li>
</ul>

<div>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(x => x[0].FirstName)</th>
            <th scope="col">@Html.DisplayNameFor(x => x[0].LastName)</th>
            <th scope="col">@Html.DisplayNameFor(x => x[0].Email)</th>
        </tr>
        </thead>

        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>